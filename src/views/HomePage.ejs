<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rental Book</title>
    <link rel="stylesheet" href="/css/header.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link href="https://fonts.cdnfonts.com/css/bavro" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/elianto" rel="stylesheet">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>

<body>
    <div class="header-container">
        <div class="left">
            <a href="/">
                <img src="/icon/book.png" alt="" class="book-icon-header">
            </a>
            <div class="rental-book-header">Rental Book</div>
        </div>
        <div class="middle">
            <input type="search-bar" type="text" placeholder="Search">
            <button class="search-button">
                <img class="search-icon" src="/icon/search-icon.png">
            </button>
        </div>
        <div class="right">
            <div onclick="window.location.href = '/category'" class="category">Category</div>
            <img onclick="window.location.href = '/cart'" class="cart-icon" src="/icon/cart-icon.png" alt="">
            <% if(userData.username===undefined){ %>
                <button onclick="window.location.href = '/signup'" class="btn-signup">Sign Up</button>
                <button onclick="window.location.href = '/login'" class="btn-login">Login</button>
                <%} else {%>
                    <% if(userData.roles==='admin' ) {%>
                        <!-- admin don't need to use cart -->
                        <script>document.querySelector('.cart-icon').style.display = "none"</script>
                        <%}%>
                            <span class="username" onclick="window.location.href = '/personal'">
                                <%= userData.username %>
                            </span>
                            <button id="btnLogout" onclick="window.location.href = '/logout'" class="btn-logout">
                                <span class="logout-span">Logout</span>
                                <img src="/icon/logout-icon.png" alt="Logout" class="logout-icon">
                            </button>
                            <%}%>
        </div>
    </div>

    <div class="product-grid">
        <% book.forEach((Books)=>{%>
            <div class="product-container">
                <img class="book-image" src="/product/<%= Books.image%>"
                    onclick="window.location.href = '/details/book'" alt="">
                <div class="book-name">
                    <%= Books.name%>
                </div>
                <div class="author">
                    <%= Books.author%>
                </div>
                <div class="price">
                    <%= Books.price%> VND
                </div>
                <button class="btn-rent">RENT</button>
            </div>
            <%})%>
    </div>
    <footer class="footer-container">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>Phường An Khê,<br>
                    Quận Thanh Khê, TP. Đà Nẵng<br>
                    <a href="tel:035*******">035*******</a><br>
                    <a href="mailto:abcsasda@gmail.com">abcsasda@gmail.com</a>
                </p>
            </div>

            <div class="footer-section">
                <h3>Categories</h3>
                <ul>
                    <li><a href="#men">Love</a></li>
                    <li><a href="#women">Novel</a></li>
                    <li><a href="#brands">Horror</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>Follow Us</h3>
                <p>
                    <a href="https://www.facebook.com/" target="_blank">Facebook</a>
                </p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2024 Rental Book. All Rights Reserved.</p>
        </div>
    </footer>
</body>

</html>